<div id="sidebar" style="float: left; width: 30%;">
  <img id="avatar-img" src="<%= user.escape('avatar_img') %>"/>
  <br>
  <h2  class="details">Details</h2>
  <ul class="user-details">
    <li> <strong>Compensation:</strong> <%= user.escape('compensation') %></li>
    <br>
    <li> <strong>Experience:</strong> <%= user.escape('experience') %></li>
  </ul>
</div>

<div id="content" style="float: left; width: 60%;">
  <div class="user-general-info">

    <% if (ModelFindrApp.isGuest !== true && ModelFindrApp.currentUserId === parseInt(user.id)) { %>
      <button id="photo-btn">Upload</button>
      <button id="edit-btn">Edit</button>
    <% } %>

    <div id="exampleDropPane"></div>

    <h6><%= user.escape('username') %></h6>
    <ul id="user-gen-info-list">
    </ul>
  </div>

  <div id="about-me">
    <h2>About Me</h2>
    <p>
      <%= user.escape('about_me') %>
    </p>
  </div>

  <div id="portfolio">
    <h3>Portfolio</h3> <a class="pf-btn" href="#">View Portfolio</a>
    <ul id="user-portfolio" class="list-inline">
    </ul>
  </div>
</div>
